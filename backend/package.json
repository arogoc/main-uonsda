{
  "name": "uonsda-backend",
  "version": "1.0.0",
  "description": "Backend for University of Nairobi SDA Church Website",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "dev": "dotenv -e .env -- nodemon app.js",
    "start": "prisma migrate deploy && node app.js",
    "build": "prisma generate",
    "postinstall": "prisma generate",
    "prisma:generate": "dotenv -e .env -- prisma generate",
    "prisma:migrate": "dotenv -e .env -- prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "dotenv -e .env -- prisma studio"
  },
  "keywords": [
    "church",
    "uonsda",
    "express",
    "prisma"
  ],
  "author": "Arogo Clinton",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.18.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.9.2",
    "dotenv-cli": "^11.0.0",
    "nodemon": "^3.1.10",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}